<%= form_for @user do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :surname %><br>
      <%= f.text_field :surname %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :bio %><br>
      <%= f.text_area :bio %>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>