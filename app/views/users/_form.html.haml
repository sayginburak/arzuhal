= form_for @user do |f|
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :surname
    %br/
    = f.text_field :surname
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :bio
    %br/
    = f.text_area :bio
  %p
    = f.submit
= link_to "<<Back to users", users_path